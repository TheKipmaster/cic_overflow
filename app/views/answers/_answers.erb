<h4 class="divide"><%= question.answers.length %> Resposta(s)</h4>

<% question.answers.order(:cached_votes_score).reverse.each do |answer| %>
  <div class="container-fluid no-gutters answer">
    <div class="row">
      <div class="col-1 answer-score">
        <%= render 'layouts/score', votable: answer %>

        <% if false %>
          <p>
            <strong>Answered:</strong>
            <%= answer.answered %>
          </p>
        <% end %>

      </div>
      <div class="col-7 answer-body">
        <div class="row">
          <%= simple_format(answer.body) %>
        </div>
        <div class="row justify-content-end">
          <div class="col-5 author">
            perguntado em <%= @question.created_at %>
            <br>
            <span class="text-primary">
              <%= @question.user.email %>
            </span>
            <%= "- #{@question.user.major} (#{@question.user.year}.#{@question.user.semester})" %>
          </div>
        </div>
      </div>
      <div class="col-4 answer-comments">
        <%# comments on this answer %>
        <%= render 'comments/comments', commentable: answer %>
      </div>
    </div>
  </div>
<% end %>

<br>

<%# create new answer to this question %>
<%= render 'answers/form', question: @question %>